<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/baseLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shedow_background"
        android:elevation="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.fmrnz.utils.CircularNetworkImageView
                android:id="@+id/userrImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_weight=".2" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="16dp"
                android:layout_weight="2.6"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Name"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textColor="#21b9f4"
                    android:textSize="11dp" />

            </LinearLayout>


            <Button
                android:id="@+id/bookNowButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="16dp"
                android:layout_weight=".1"
                android:background="@drawable/button_color"
                android:text="Book Now"
                android:textColor="#ffffff"
                android:textSize="12dp" />


        </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_marginLeft="15dp"
           android:layout_height="wrap_content">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <LinearLayout
                   android:id="@+id/relativelayout1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:id="@+id/image1"
                       android:layout_width="16dp"
                       android:layout_height="16dp"
                       android:src="@drawable/petrol" />

                   <TextView
                       android:id="@+id/petrol"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_marginLeft="5dp"
                       android:fontFamily="sans-serif"
                       android:text="Petrol"
                       android:textSize="11dp"
                       android:textStyle="bold" />

               </LinearLayout>

               <LinearLayout
                   android:id="@+id/relativelayout2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:layout_toRightOf="@+id/relativelayout1">

                   <ImageView
                       android:id="@+id/image22"
                       android:layout_width="16dp"
                       android:layout_height="16dp"
                       android:src="@drawable/automatic" />

                   <TextView
                       android:id="@+id/automatic"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_marginLeft="5dp"
                       android:ellipsize="end"
                       android:fontFamily="sans-serif"
                       android:maxLength="9"
                       android:text="Petrol"
                       android:textSize="11dp"
                       android:textStyle="bold" />

               </LinearLayout>




           </LinearLayout>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:orientation="horizontal">
               <LinearLayout
                   android:id="@+id/relativelayout3"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:id="@+id/image3"
                       android:layout_width="16dp"
                       android:layout_height="16dp"
                       android:src="@drawable/seat" />


                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:orientation="horizontal">


                       <TextView
                           android:id="@+id/seat"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:layout_marginLeft="5dp"
                           android:fontFamily="sans-serif"
                           android:text="4"
                           android:textSize="10dp"
                           android:textStyle="bold" />

                       <TextView
                           android:id="@+id/textView4"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:layout_marginLeft="3dp"
                           android:text="Seater"
                           android:textSize="11dp"
                           android:textStyle="bold" />

                   </LinearLayout>


               </LinearLayout>

               <LinearLayout
                   android:id="@+id/relativelayout15"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp">

                   <ImageView
                       android:id="@+id/image15"
                       android:layout_width="16dp"
                       android:layout_height="16dp"
                       android:src="@drawable/engine" />


                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:orientation="horizontal">


                       <TextView
                           android:id="@+id/textView15"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:layout_marginLeft="3dp"
                           android:fontFamily="sans-serif"
                           android:text="1L"
                           android:textSize="11dp"
                           android:textStyle="bold" />

                   </LinearLayout>


               </LinearLayout>
           </LinearLayout>
       </LinearLayout>



        <RelativeLayout
            android:id="@+id/relativelayout4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relativelayout5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <RatingBar
                    android:id="@+id/ratingBar1"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:clickable="false"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:theme="@style/RatingBar" />

                <TextView
                    android:id="@+id/ratingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/ratingBar1"
                    android:text="0.0/5" />


            </RelativeLayout>


            <ImageView
                android:id="@+id/carImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/relativelayout5"
                android:scaleType="fitXY"

                />


            <RelativeLayout
                android:id="@+id/relativelayout6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativelayout5"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/relativelayout7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:text="Hourly"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/hour1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text4"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:text="$"
                        android:textColor="#000"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text4"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@id/hour1"
                        android:fontFamily="sans-serif"
                        android:text="15"
                        android:textColor="#000"
                        android:textSize="11dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativelayout8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/relativelayout7">

                    <TextView
                        android:id="@+id/text6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:text="Daily"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/daily1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text6"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:text="$"
                        android:textColor="#000"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/daily"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text6"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@id/daily1"
                        android:fontFamily="sans-serif"
                        android:text="20"
                        android:textColor="#000"
                        android:textSize="11dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativelayout9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/relativelayout8"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:text="Weekly"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/week1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text8"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:text="$"
                        android:textColor="#000"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text8"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@id/week1"
                        android:fontFamily="sans-serif"
                        android:text="40"
                        android:textColor="#000"
                        android:textSize="11dp" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativelayout10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativelayout6"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/relativelayout11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:text="5.0 km"
                        android:textColor="#000"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/distance"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif"
                        android:text="Away"
                        android:textSize="10dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativelayout12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/relativelayout11"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/model"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="#000"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/model1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/model"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:textSize="10dp" />

                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>

