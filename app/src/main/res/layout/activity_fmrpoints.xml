<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:fontFamily="sans-serif-medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Your Points Balance"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/points"
                android:text="0P"
                android:layout_marginTop="10dp"
                android:textColor="#2baf6c"
                android:fontFamily="sans-serif-medium"
                android:textSize="20dp"
                android:textStyle="bold" />


            <TextView
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="*1000 FMR Points Equals To 10NZD"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold" />


            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_marginTop="30dp"
                android:background="#626262" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="sans-serif-medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Point Summary"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="20dp" />



        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            >


            <TextView
                android:fontFamily="sans-serif"
                android:id="@+id/test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Earned Via Referral"
                android:textColor="#000"
                android:textSize="18dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:fontFamily="sans-serif-medium"
                android:id="@+id/referPoint"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0P"
                android:textStyle="bold"
                android:textColor="#2baf6c"
                android:textSize="18dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
          >


            <TextView
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ride Cancellation"
                android:textColor="#000"
                android:textSize="18dp" />

            <TextView
                android:fontFamily="sans-serif-medium"
                android:layout_alignParentRight="true"
                android:id="@+id/bookDateDrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0P"
                android:textStyle="bold"
                android:textColor="#2baf6c"
                android:textSize="18dp" />


        </RelativeLayout>



        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="#626262" />





    </LinearLayout>

</LinearLayout>





